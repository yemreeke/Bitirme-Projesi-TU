<Window x:Class="Yoklama_Sistemi.GirisEkrani"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yoklama_Sistemi"
        mc:Ignorable="d"
        Title="Hwid Giriş Sistemi" Height="171" Width="338"
        ResizeMode="NoResize">
    <Grid Margin="0,0,0,-6">
        <Button x:Name="BtnHwidOgren" Content="Hwid Öğren" HorizontalAlignment="Left" Height="60" Margin="10,61,0,0" VerticalAlignment="Top" Width="140" Click="BtnHwidOgren_Click" FontWeight="Bold" FontSize="18"/>
        <TextBox x:Name="hwidTextBox" HorizontalAlignment="Left" Margin="10,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" Height="30" FontWeight="Bold" FontSize="20" TextAlignment="Center" IsEnabled="False"/>
        <Button x:Name="BtnKopyala" Content="Kopyala" HorizontalAlignment="Left" Height="30" Margin="219,15,0,0" VerticalAlignment="Top" Width="89" Click="BtnKopyala_Click" FontSize="15" FontWeight="Bold"/>
        <Button x:Name="BtnGirisYap" Content="Giriş Yap" HorizontalAlignment="Left" Height="60" Margin="168,61,0,0" VerticalAlignment="Top" Width="140" Click="BtnGirisYap_Click" FontWeight="Bold" FontSize="18"/>

    </Grid>
</Window>
